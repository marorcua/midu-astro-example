---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title> 
			La velada del año
		</title>
	</head>
	<body class="relative">
		
		<header class="relative z-10">
			<div class="absolute left-1/2 -translate-x-1/2 flex flex-col gap-1 justify-center items-center">
				<img src="/logo.webp" alt="logo velada del año 3" class="w-32 lg:w-64 h-auto"/>
				<h1 class="font-boxing text-3xl text-center font-bold text-white">
					<span class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-400 to-white inline-block leading-relaxed">La velada del año</span> 
					<span class="text-yellow-300">III</span></h1>
			</div>
		</header>

		<div class="relative">
			<section
			id="boxers"
			class={`flex justify-between relative 
			[&>div>img]:absolute [&>div>img]:bottom-0
			[&>div>img]:w-auto
			[&>div>img]:animate-once [&>div>img]:animate-duration-1000
			h-[50vh] lg:h-screen pt-24
			border-b border-white/10
			`}
			>
				<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131313] via-zinc-900 to-zinc-920">
					<div class="absolute inset-0 flex gap-x-2 left-1/2 -translate-x-1/2 justify-center opacity-20">
						<div class="blur-sm w-2 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-800"></div>
						<div class="blur-sm w-2 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-800"></div>
						<div class="blur-sm w-2 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-800"></div>
					</div>

					</div>
						<div class={`relative w-full [&>img]:animate-fade-right`} >
							<img src="/boxers/coscu.webp" alt="coscu" class="z-50 h-full left-0">
							<img src="/boxers/mayichi.webp" alt="mayichi" class="z-40 left-[5%] h-[80%] animate-delay-200">
							<img src="/boxers/viruzz.webp" alt="viruzz" class="z-30 left-[15%] h-[75%] animate-delay-300">
							<img src="/boxers/fernanfloo.webp" alt="fernanfloo" class="z-20 left-[30%] h-[70%] animate-delay-500 [clip-path:polygon(64%_33%,_83%_30%,_85%_72%,_100%_100%,_0_100%,_0_0,_75%_0)]">
							<img src="/boxers/la-rivers.webp" alt="la-rivers" class="z-10 left-[42%] h-[68%] animate-delay-700">
							<img src="/boxers/papigavi.webp" alt="papigavi" class="z-0 left-[45%] h-[65%] animate-delay-1000">

						</div>
						<div class={`relative w-full [&>img]:animate-fade-left`}>
							<img src="/boxers/german.webp" alt="german" class="z-50 right-[0] h-full ">
							<img src="/boxers/amouranth.webp" alt="amouranth" class="z-40 right-[5%] h-[80%] animate-delay-200">
							<img src="/boxers/shelao.webp" alt="shelao" class="z-30 right-[15%] h-[75%] animate-delay-300">
							<img src="/boxers/luzu.webp" alt="luzu" class="z-20 right-[30%] h-[70%] animate-delay-500">
							<img src="/boxers/rivers.webp" alt="rivers" class="z-10 right-[42%] h-[68%] animate-delay-700">
							<img src="/boxers/ampeter.webp" alt="ampeter" class="z-0 right-[45%] h-[65%] animate-delay-1000">
						</div>
					</div>
				</div>
			</section>
			<div id="info" class="lock lg:absolute lg:bottom-48 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2 opacity-1">
				<div>
					<div class="px-5 pt-4 pb-2 text-black bg-white text-center">
						<h2 class="font-boxing text-7xl">1 de Julio</h2>
					</div>
					<div class="px-5 pt-2 pb-1 text-white bg-black text-center">
						<a href="https://twitch.tv/ibai" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="font-boxing text-[46px] hover:contrast-150 hover:scale-105 transition inline-block">
						<span class="text-white">twitch.tv/</span><span class="text-yellow-300">ibai</span> 
						</a>
					</div>
					<div class="px-5 pt-2 pb-1 bg-sky-400 text-center">
						<a href="https://twitch.tv/ibai" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="hover:contrast-150 hover:scale-105 transition inline-block font-boxing text-4xl text-black">
							Comprar entradas
						</a>
					</div>
				</div>
			</div>
			<div id="combat" 
			class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-16 opacity-0"
			>
				<div class="px-5 pt-4 pb-2 text-white bg-black text-center">
					<h3 class="font-boxing-striped text-7xl">MAYICHI</h3>
				</div>
				<span class=" left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-yellow-500 text-7xl absolute block [text-shadow:2px_2px_0px_red]">
					VS.
				</span>
				<div class="px-5 pt-4 pb-2 text-black bg-white text-center">
					<h3 class="font-boxing-striped text-7xl">AMOURANTH</h3>
				</div>
			</div>
		</div>
		<footer>

		</footer>
	</body>
</html>

<style is:global>
body{
	background: #131313;
}
@font-face {
	font-family: 'Boxing';
	src: url('/fonts/BOXING.ttf');
	font-weight: bold;
}
@font-face {
	font-family: 'Boxing Striped';
	src: url('/public/fonts/BOXING-striped.ttf');
	font-weight: bold;

}
</style>

<script>
	const $boxers = document.querySelector('#boxers')
	const $boxerImages = $boxers.querySelectorAll('img')
	const $info = document.querySelector('#info')
	const $combat = document.querySelector('#combat')
	console.log($info);
	

	$boxerImages.forEach(($img,ind)=>{
		$img.addEventListener('mouseleave',()=>{
			$boxerImages.forEach($img=>{
				$img.setAttribute('style','transition: all .3s ease-in-out')
			})

			$info.setAttribute('style', 'opacity:1; transition: all .3s ease-in-out')
			$combat.setAttribute('style', 'opacity:0; transition: all .3s ease-in-out')
		})
		$img.addEventListener('mouseenter',()=>{
			const sectionImages = $img.parentNode.children
			
			const position = Array.from(sectionImages).indexOf($img)
			const [leftBoxer,rightBoxer]=[
				$boxerImages[position],
				$boxerImages[position+$boxerImages.length/2]
			]

			$info.setAttribute('style', 'opacity:0; transition: all .3s ease-in-out')
			$combat.setAttribute('style', 'opacity:1; transition: all .3s ease-in-out')
			
			$boxerImages.forEach($img=>{
				$img.setAttribute(
					'style',
					'filter: blur(2px) grayscale(.8); transition: all .3s ease-in-out'
				)
			})

			const [firstBoxerName,secondBoxerName]=$combat.querySelectorAll('h3')
			firstBoxerName.innerText=leftBoxer.alt
			secondBoxerName.innerText=rightBoxer.alt

			leftBoxer.setAttribute(
				'style',
				'scale:1.1; contrast: 1.1; transition:all .3s ease-in-out'
			)

			rightBoxer.setAttribute(
				'style',
				'scale:1.1; contrast: 1.1; transition:all .3s ease-in-out'
			)
			
		})
	})
</script>
